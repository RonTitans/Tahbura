# Hebrew Inspection Tracker Frontend Environment
# מערכת מעקב בדיקות עברית - משתני סביבה Frontend

# Supabase Configuration
# תצורת Supabase
VITE_SUPABASE_URL=https://your-project-id.supabase.co
VITE_SUPABASE_ANON_KEY=your_anon_key_here

# App Configuration
# תצורת האפליקציה
VITE_APP_NAME="מערכת מעקב בדיקות הנדסיות"
VITE_COMPANY_NAME="קריית התקשוב"
VITE_API_URL=http://localhost:3001

# Development Configuration
# תצורת פיתוח
VITE_DEV_MODE=true
VITE_DEBUG_MODE=false

# Hebrew/RTL Configuration
# תצורת עברית/RTL
VITE_DEFAULT_LANGUAGE=he
VITE_RTL_ENABLED=true
VITE_DATE_FORMAT=DD/MM/YYYY
VITE_TIMEZONE=Asia/Jerusalem

# Upload Configuration
# תצורת העלאה
VITE_MAX_FILE_SIZE=10485760
VITE_ALLOWED_FILE_TYPES=image/jpeg,image/png,image/webp
VITE_MAX_PHOTOS_PER_INSPECTION=10

# Feature Flags
# דגלי תכונות
VITE_ENABLE_PWA=true
VITE_ENABLE_OFFLINE_MODE=true
VITE_ENABLE_PUSH_NOTIFICATIONS=false
